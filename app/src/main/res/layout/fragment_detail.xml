<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_fragment_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        app:resize_mode="zoom"
        app:show_timeout="2000" />

    <ImageView
        android:id="@+id/recipe_step_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:adjustViewBounds="true"
        android:contentDescription="@string/recipe_step_image_content_desc"
        android:visibility="gone" />

    <TextView
        android:id="@+id/recipe_step_description_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/colorPrimaryDark"
        android:gravity="start"
        android:padding="@dimen/padding_small"
        android:textAlignment="gravity"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_medium"
        tools:text="Recipe Step Description" />
</LinearLayout>