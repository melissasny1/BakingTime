<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recipe_step_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/recipe_step_play_arrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/lightBackground"
        android:contentDescription="@string/recipe_step_play_arrow_content_desc"
        android:src="@drawable/ic_play_arrow_black_48dp" />

    <TextView
        android:id="@+id/recipe_step_textview"
        style="@style/RecyclerViewListItemTextViewStyle"
        android:layout_marginEnd="@dimen/margin_small"
        android:padding="@dimen/padding_small"
        android:textAlignment="gravity" />
</LinearLayout>